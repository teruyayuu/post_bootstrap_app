<h1>投稿一覧</h1>
<table>
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">タイトル</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <%= @posts.each do |post| %>
    <tr>
      <th scope="row"><%= post.id %></th>
      <td><%= post.title %></td>
      <td>
        <%= link_to "詳細", post %>
        <%= link_to "編集", edit_post_path(post) %>
        <%= link_to "削除", post, data:{ turbo_method: :delete, turbo_confirm: "削除してもよろしいでしょうか？" } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


